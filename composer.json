{
  "name": "tigress/tigress",
  "description": "Tigress is a PHP framework for building web applications.",
  "type": "project",
  "keywords": [
    "php",
    "mvc",
    "framework",
    "web",
    "application",
    "tigress",
    "rudymas"
  ],
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Rudy Mas",
      "email": "rudy.mas@rudymas.be",
      "homepage": "https://rudymas.be",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "support@rudymas.be",
    "source": "https://github.com/RudyMas/tigress"
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.3",
    "tigress/core": ">=v0.5"
  },
  "require-dev": {
    "phpunit/phpunit": ">=11.3",
    "squizlabs/php_codesniffer": ">=3.10"
  },
  "autoload": {
    "psr-4": {
      "Controller\\": "src/controllers",
      "Model\\": "src/models",
      "Repository\\": "src/repositories",
      "Service\\": "src/services",
      "Test\\": "tests"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "composer dump-autoload -o",
      "npm install"
    ],
    "post-update-cmd": [
      "composer dump-autoload -o",
      "npm update --save"
    ],
    "test": "phpunit --configuration phpunit.xml",
    "lint": "phpcs --standard=PSR12 src/"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    }
  },
  "extra": {
    "project-url": {
      "Documentation": "https://github.com/RudyMas/tigress/wiki"
    }
  }
}